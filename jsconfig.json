{
    "include": [
        "addon/**/*.js",
        "plugins/**/*.js",
        "translate/**/*.js"
    ],

    "compilerOptions": {
        "target": "ES2024",
        "module": "ESNext",
        "moduleResolution": "Bundler",

        "baseUrl": ".",
        "paths": {
            "/js/*": ["addon/src/js/*"]
        },

        // "checkJs": true,
        // "noImplicitAny": false
    },

    "typeAcquisition": {
        "include": ["firefox-webext-browser"]
    },

    "vueCompilerOptions": {
        "extensions": [".vue"],
        "target": 2.7
    }
}
